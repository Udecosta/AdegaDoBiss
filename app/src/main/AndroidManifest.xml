<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adegadobiss">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.CancellOrderActivity"></activity>

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="true" />

        <activity android:name=".view.OrderHistoryActivity" />
        <activity android:name=".view.CategoryActivity" />
        <activity android:name=".view.PaymentActivity" />
        <activity android:name=".view.OrderActivity" />
        <activity android:name=".view.DetailActivity" />
        <activity android:name=".view.ProductsActivity" />
        <activity android:name=".view.ActivityRegisterUser" />
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>